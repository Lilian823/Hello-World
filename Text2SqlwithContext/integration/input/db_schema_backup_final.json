{
   "database": "medical",
    "medical_checkup": [
        { "name": "id", "type": "INT", "extra": "AUTO_INCREMENT PRIMARY KEY" },
        { "name": "patient_id", "type": "VARCHAR(20)", "extra": "NOT NULL" },
        { "name": "patient_name", "type": "VARCHAR(50)", "extra": "NOT NULL" },
        { "name": "gender", "type": "ENUM", "values": ["男", "女"], "extra": "NOT NULL" },
        { "name": "age", "type": "INT", "extra": "NOT NULL" },
        { "name": "checkup_date", "type": "DATE", "extra": "NOT NULL" },
        { "name": "height", "type": "DECIMAL(5,2)", "comment": "身高(cm)" },
        { "name": "weight", "type": "DECIMAL(5,2)", "comment": "体重(kg)" },
        { "name": "bmi", "type": "DECIMAL(5,2)", "comment": "体质指数" },
        { "name": "blood_pressure", "type": "VARCHAR(10)", "comment": "血压(mmHg)" },
        { "name": "fasting_glucose", "type": "DECIMAL(5,2)", "comment": "空腹血糖(mmol/L)" },
        { "name": "total_cholesterol", "type": "DECIMAL(5,2)", "comment": "总胆固醇(mmol/L)" },
        { "name": "triglycerides", "type": "DECIMAL(5,2)", "comment": "甘油三酯(mmol/L)" },
        { "name": "hdl", "type": "DECIMAL(5,2)", "comment": "高密度脂蛋白(mmol/L)" },
        { "name": "ldl", "type": "DECIMAL(5,2)", "comment": "低密度脂蛋白(mmol/L)" },
        { "name": "alt", "type": "INT", "comment": "谷丙转氨酶(U/L)" },
        { "name": "ast", "type": "INT", "comment": "谷草转氨酶(U/L)" },
        { "name": "wbc", "type": "DECIMAL(5,2)", "comment": "白细胞计数(×10^9/L)" },
        { "name": "rbc", "type": "DECIMAL(5,2)", "comment": "红细胞计数(×10^12/L)" },
        { "name": "hemoglobin", "type": "DECIMAL(5,2)", "comment": "血红蛋白(g/L)" },
        { "name": "urine_protein", "type": "ENUM", "values": ["阴性", "+-", "+", "++", "+++", "++++"], "comment": "尿蛋白" },
        { "name": "ecg_result", "type": "VARCHAR(100)", "comment": "心电图结果" },
        { "name": "ultrasound_result", "type": "VARCHAR(200)", "comment": "超声检查结果" },
        { "name": "doctor_advice", "type": "TEXT", "comment": "医生建议" },
        { "name": "created_at", "type": "TIMESTAMP", "extra": "DEFAULT CURRENT_TIMESTAMP" }
    ],
      "patients": [
        {"name": "patient_id", "type": "varchar(20)", "null": "NO", "key": "PRI", "default": null, "extra": ""},
        {"name": "name", "type": "varchar(50)", "null": "NO", "key": "", "default": null, "extra": ""},
        {"name": "gender", "type": "enum('男','女')", "null": "NO", "key": "", "default": null, "extra": ""},
        {"name": "birth_date", "type": "date", "null": "NO", "key": "", "default": null, "extra": ""},
        {"name": "phone", "type": "varchar(20)", "null": "YES", "key": "", "default": null, "extra": ""},
        {"name": "address", "type": "varchar(200)", "null": "YES", "key": "", "default": null, "extra": ""},
        {"name": "blood_type", "type": "enum('A','B','AB','O','未知')", "null": "YES", "key": "", "default": null, "extra": ""},
        {"name": "rh_factor", "type": "enum('阳性','阴性','未知')", "null": "YES", "key": "", "default": null, "extra": ""},
        {"name": "allergy_history", "type": "text", "null": "YES", "key": "", "default": null, "extra": ""},
        {"name": "chronic_diseases", "type": "text", "null": "YES", "key": "", "default": null, "extra": "慢性病史"},
        {"name": "family_disease_history", "type": "text", "null": "YES", "key": "", "default": null, "extra": "家族病史"},
        {"name": "created_at", "type": "timestamp", "null": "YES", "key": "", "default": "CURRENT_TIMESTAMP", "extra": "DEFAULT_GENERATED"}
      ],
      "blood_pressure_records": [
        {"name": "id", "type": "int", "null": "NO", "key": "PRI", "default": null, "extra": "auto_increment"},
        {"name": "patient_id", "type": "varchar(20)", "null": "NO", "key": "MUL", "default": null, "extra": ""},
        {"name": "record_date", "type": "date", "null": "NO", "key": "", "default": null, "extra": ""},
        {"name": "record_time", "type": "time", "null": "NO", "key": "", "default": null, "extra": ""},
        {"name": "systolic", "type": "int", "null": "NO", "key": "", "default": null, "extra": "收缩压(mmHg)"},
        {"name": "diastolic", "type": "int", "null": "NO", "key": "", "default": null, "extra": "舒张压(mmHg)"},
        {"name": "pulse_rate", "type": "int", "null": "YES", "key": "", "default": null, "extra": "脉搏(次/分)"},
        {"name": "measurement_condition", "type": "enum('静息','活动后','服药后','其他')", "null": "YES", "key": "", "default": "静息", "extra": ""},
        {"name": "notes", "type": "varchar(200)", "null": "YES", "key": "", "default": null, "extra": ""}
      ],
      "blood_glucose_records": [
        {"name": "id", "type": "int", "null": "NO", "key": "PRI", "default": null, "extra": "auto_increment"},
        {"name": "patient_id", "type": "varchar(20)", "null": "NO", "key": "MUL", "default": null, "extra": ""},
        {"name": "record_date", "type": "date", "null": "NO", "key": "", "default": null, "extra": ""},
        {"name": "record_time", "type": "time", "null": "NO", "key": "", "default": null, "extra": ""},
        {"name": "glucose_value", "type": "decimal(5,2)", "null": "NO", "key": "", "default": null, "extra": "血糖值(mmol/L)"},
        {"name": "measurement_type", "type": "enum('空腹','餐后2小时','随机','睡前','其他')", "null": "NO", "key": "", "default": null, "extra": ""},
        {"name": "notes", "type": "varchar(200)", "null": "YES", "key": "", "default": null, "extra": ""}
      ],
      "lipid_profile_records": [
        {"name": "id", "type": "int", "null": "NO", "key": "PRI", "default": null, "extra": "auto_increment"},
        {"name": "patient_id", "type": "varchar(20)", "null": "NO", "key": "MUL", "default": null, "extra": ""},
        {"name": "test_date", "type": "date", "null": "NO", "key": "", "default": null, "extra": ""},
        {"name": "total_cholesterol", "type": "decimal(5,2)", "null": "NO", "key": "", "default": null, "extra": "总胆固醇(mmol/L)"},
        {"name": "triglycerides", "type": "decimal(5,2)", "null": "NO", "key": "", "default": null, "extra": "甘油三酯(mmol/L)"},
        {"name": "hdl", "type": "decimal(5,2)", "null": "NO", "key": "", "default": null, "extra": "高密度脂蛋白(mmol/L)"},
        {"name": "ldl", "type": "decimal(5,2)", "null": "NO", "key": "", "default": null, "extra": "低密度脂蛋白(mmol/L)"},
        {"name": "vldl", "type": "decimal(5,2)", "null": "YES", "key": "", "default": null, "extra": "极低密度脂蛋白(mmol/L)"},
        {"name": "non_hdl_cholesterol", "type": "decimal(5,2)", "null": "YES", "key": "", "default": null, "extra": "非高密度脂蛋白胆固醇(mmol/L)"},
        {"name": "notes", "type": "varchar(200)", "null": "YES", "key": "", "default": null, "extra": ""}
      ]
}